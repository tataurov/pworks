$slider_height: 300px;

.slider-frame {
  position: relative;
  &:before {
    content: ''; position: absolute; z-index: 1; height: 100%; width: 100%;
    padding: 8px; transform: rotate(-1.5deg); left: -7px; top: -7px;
    background: #f6f6bb; box-shadow: 1px 1px 1px rgba(0, 0, 0, .45);
  }
}

.slider-wrapper {
  background: #fff; padding: 7px; box-shadow: 1px 1px 3px rgba(0, 0, 0, .65);
  position: relative; height: $slider_height; z-index: 2; margin-bottom: 80px;
  .iosslider {
    position: relative; top: 0; left: 0; overflow: hidden; width: 100%; height: $slider_height;
    * { user-select: none; }
    .slider {
      width: 100%; height: 100%; background: #000;
      .slide {
        float: left; width: 100%; height: $slider_height; overflow: hidden; background: #000;
        &:first-child { position: relative; z-index: 1; }
        .slide-bg {
          position: absolute; width: 3000px; left: 50%; top: 0; margin-left: -1500px; text-align: center;
          img { display: inline-block; height: $slider_height; }
        }

      }
    }
  }
  .navigation {
    width: 100%; height: 16px; text-align: center; position: absolute; left: 0; bottom: 10px;
    .item {
      cursor: pointer; display: inline-block; height: 12px; width: 12px; background: #fff; box-shadow: 2px 2px 4px rgba(0, 0, 0, .7); margin-right: 15px;
      -webkit-transition: all .3s linear; -moz-transition: all .3s linear; transition: all .3s linear; border-radius: 100%;
      &.selected { background: $yellow; }
    }
  }
  .slider-arrow {
    height: 65px; width: 46px; position: absolute; top: 50%; margin-top: -32px; opacity: 0.8; transition: opacity .2s linear;
    &:hover { opacity: 1; }
    &.left- { background: url(<%= asset_path 'control_left.png' %>) no-repeat; left: 0; }
    &.right- { background: url(<%= asset_path 'control_right.png' %>) 100% 0 no-repeat; right: 0; }
  }
}
