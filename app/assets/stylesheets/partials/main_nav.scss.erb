.navigation {
  text-align: center;
  .nav-list {
    list-style: none; padding-top: 2px; display: inline-block;
    .nav-list-item {
      float: left;
      border-left: 1px solid rgba(204, 204, 0, .35);
      border-right: 1px solid rgba(0, 0, 0, .75);
      a {
        box-sizing: border-box; padding: 15px 20px; height: 48px; font-size: 16px; display: block;
        text-decoration: none; font-weight: bold; transition: all .2s linear; background: rgba(0, 0, 0, 0);
      }
      &:hover {
        a { color: $yellow; background: rgba(0, 0, 0, .25); transition: none; }
      }
    }
  }
}