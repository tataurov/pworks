$item_width: 300px;
$img_width: 300px;
$img_height: 200px;

.work-image-wrapper {
  padding: 7px; background: #fff; box-shadow: 2px 2px 4px rgba(0, 0, 0, .55); display: inline-block;
  .work-image-block { position: relative; }
  img { max-height: 600px; }
  .work-image-frame {
    position: absolute; width: 100%; height: 100%; box-shadow: inset 1px 1px 3px rgba(0, 0, 0, .55);

  }

}

.work-card-wrapper {
  margin-bottom: 90px;
  h1 { margin: -20px 0 35px; font-size: 64px; line-height: .6; }
  .work-details {
    font-size: 24px; line-height: 1; margin-bottom: 17px;
  }
  .work-description { font-size: 17px; margin-bottom: 30px; }
}
