%ul.works-list
  - works.each do |work|
    %li.works-list-item
      %a.work-link{href: work_url(id: work.id_with_slug)}
        .work-item-top
          .work-img-wrapper
            .work-img-cell
              %img{src: work.work_image.url(:thumb)}
        .work-item-bottom
          .work-title= work.title
          .work-details
            = "#{work.category.try(:title)} - #{work.material.try(:title)}"
  - 4.times do |dummy|
    %li.wl-dummy